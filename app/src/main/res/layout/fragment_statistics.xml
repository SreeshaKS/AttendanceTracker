<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sreesha.android.attendancetracker.Statistics.StatisticsFragment">

    <ImageView
        android:id="@+id/emptyStatsIV"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:contentDescription="@string/empty_stats_message"
        android:src="@drawable/ic_chart_scatterplot_hexbin_grey600_36dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/statisticsRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:contentDescription="@string/search_by_usn"
        app:srcCompat="@drawable/ic_search_white_24dp" />
</FrameLayout>
